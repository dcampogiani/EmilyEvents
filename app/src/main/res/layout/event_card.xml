<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/ra"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        app:cardCornerRadius="7dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center|start"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/eventCardImage"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/eventCardTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:textColor="@color/primary_text"
                style="@style/Base.TextAppearance.AppCompat.Headline"
                tools:text="Depeche Mode - Stadio Renato Dall'Ara, Bologna 29/6/17" />

            <TextView
                android:id="@+id/eventCardDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:textColor="@color/secondary_text"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:textStyle="normal"
                tools:text="29/06" />

            <TextView
                android:id="@+id/eventCardLocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:textColor="@color/secondary_text"
                android:textStyle="normal"
                tools:text="Zamboni 53 Store - via Zamboni 53/C"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>